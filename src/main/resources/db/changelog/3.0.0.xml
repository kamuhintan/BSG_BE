<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="3.0.0" author="intan">
        <createTable tableName="credit">
            <column name="id" type="VARCHAR(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="date" type="TIMESTAMP"/>
            <column name="plafond" type="NUMERIC(20,2)"/>
            <column name="insurance" type="VARCHAR(255)"/>
            <column name="agency" type="VARCHAR(255)"/>
            <column name="phone" type="VARCHAR(50)"/>
            <column name="type" type="VARCHAR(50)"/>
            <column name="request_date" type="TIMESTAMP"/>
            <column name="ktp_number" type="VARCHAR(50)"/>
            <column name="date_of_birth" type="TIMESTAMP"/>
            <column name="place_of_birth" type="VARCHAR(255)"/>
            <column name="objective" type="TEXT"/>
            <column name="note" type="TEXT"/>
            <column name="created_date" type="BIGINT"/>
            <column name="created_by" type="VARCHAR(255)"/>
            <column name="credit_type" type="VARCHAR(255)"/>
            <column name="number" type="VARCHAR(255)"/>
            <column name="consumer_credit_type" type="VARCHAR(255)"/>
            <column name="consumer_credit_sub_type" type="VARCHAR(255)"/>
            <column name="address" type="TEXT"/>
            <column name="request_number" type="VARCHAR(255)"/>
            <column name="pk_date" type="TIMESTAMP"/>
            <column name="business_type" type="VARCHAR(255)"/>
            <column name="guarantee" type="TEXT"/>
            <column name="binding_type" type="VARCHAR(255)"/>
            <column name="notary" type="VARCHAR(255)"/>
        </createTable>

    </changeSet>
</databaseChangeLog>